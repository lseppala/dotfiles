[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    c = commit
    ca = commit -a
    cm = commit -m
    cma = commit -a -m

    rhh = reset --hard HEAD

    sr = svn rebase
    sf = svn fetch
    mm = merge master

    s = status -sb
    d = diff
    a = add
    co = checkout
    b = branch
    f = fetch
    r = reset
    l = log
    p = push
    pr = push --rebase

    ri = rebase --interactive

    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lg = log -15 --color --graph --pretty=format:'%C(yellow)%h%Creset -%C(cyan)%d%Creset %s %Cred(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

[branch.current.dev]
    rebase = true
[branch.current.qa]
    rebase = true
[diff]
	tool = vimdiff
[merge]
    tool = vimdiff
[push]
	default = tracking
